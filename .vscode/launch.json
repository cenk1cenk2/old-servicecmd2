  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "attach",
      "address": "localhost",
      "port": 9229,
      "protocol": "inspector",
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["**/<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/packages/*/dist/**/*.js"],
      "timeout": 60000
    }
  ]
}
