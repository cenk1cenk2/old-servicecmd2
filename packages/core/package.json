{
  "name": "@cenk1cenk2/oclif-boilerplate",
  "description": "A CLI boilerplate.",
  "version": "0.0.0",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cli": "bin/run.js"
  },
  "repository": "https://github.com/cenk1cenk2/oclif-boilerplate",
  "scripts": {
    "start": "TS_NODE=1 bin/run.js $command",
    "start:debug": "yarn start $command --debug",
    "start:inspect": "yarn start $command --inspect",
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "prettier --write src/ && eslint --ext .json,.ts,.js --fix src/",
    "release": "yarn lint && yarn readme",
    "readme": "yarn oclif-dev readme",
    "oclif": "oclif $command",
    "oclif-dev": "node -r tsconfig-paths/register node_modules/@oclif/dev-cli/bin/run",
    "test": "NODE_ENV=test jest --forceExit --runInBand --config ./tests/jest.js",
    "test:cov": "NODE_ENV=test jest --coverage --config ./tests/jest.js",
    "dev:test": "NODE_ENV=test jest --verbose --runInBand --forceExit --watchAll --config ./tests/jest.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn readme && lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ]
  },
  "files": [
    "bin/",
    "config/",
    "dist/"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "cenk1cenk2",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available",
      "@tiagonapoli/oclif-plugin-spaced-commands"
    ],
    "hooks": {
      "init": "./dist/hooks/init",
      "command_not_found": "./dist/hooks/not-found",
      "prerun": "./dist/hooks/prerun"
    }
  },
  "warn-if-update-available": {
    "timeoutInDays": 7,
    "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "oclif",
    "cenk1cenk2"
  ],
  "license": "MIT",
  "dependencies": {
    "@oclif/command": "^1.6.1",
    "@oclif/config": "^1.15.1",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^3.0.1",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "@tiagonapoli/oclif-plugin-spaced-commands": "^0.0.6",
    "cli-cursor": "^3.1.0",
    "config": "^3.3.1",
    "deepmerge": "^4.2.2",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "listr2": "^2.1.0-beta.1",
    "object-path": "^0.11.4",
    "object-path-immutable": "^4.1.0",
    "pad": "^3.2.0",
    "table": "^5.4.6",
    "tslib": "^2.0.0",
    "types": "^0.1.1",
    "winston": "^3.2.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "@oclif/dev-cli": "^1.22.2",
    "@types/config": "^0.0.36",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@types/object-path": "^0.11.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
