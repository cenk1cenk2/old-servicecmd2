{
  "name": "@servicecmd/cli",
  "description": "Docker-Compose task manager and server monitor.",
  "version": "0.0.1",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "servicecmd-cli": "bin/run.js"
  },
  "repository": "https://github.com/cenk1cenk2/servicecmd",
  "scripts": {
    "start": "bin/run.js $command",
    "start:debug": "yarn start $command --debug",
    "start:inspect": "yarn start $command --inspect",
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn dev:start:onSuccess\"",
    "dev:start:onSuccess": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "prettier --write src/ && eslint --ext .json,.ts,.js --fix src/",
    "release": "yarn lint && yarn readme",
    "readme": "yarn oclif-dev readme",
    "oclif": "oclif $command",
    "oclif-dev": "node -r tsconfig-paths/register ../../node_modules/@oclif/dev-cli/bin/run",
    "test": "NODE_ENV=test jest --forceExit --runInBand --config ./tests/jest.js",
    "test:cov": "NODE_ENV=test jest --coverage --config ./tests/jest.js",
    "dev:test": "NODE_ENV=test jest --verbose --runInBand --forceExit --watchAll --config ./tests/jest.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn readme && lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ]
  },
  "files": [
    "bin/",
    "config/",
    "dist/"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "cenk1cenk2",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available",
      "@tiagonapoli/oclif-plugin-spaced-commands"
    ],
    "hooks": {
      "init": "./dist/hooks/init.hook",
      "command_not_found": "./dist/hooks/not-found.hook",
      "prerun": "./dist/hooks/prerun.hook"
    }
  },
  "warn-if-update-available": {
    "timeoutInDays": 7,
    "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "oclif",
    "cenk1cenk2"
  ],
  "license": "MIT",
  "dependencies": {
    "@cenk1cenk2/boilerplate-oclif": "^1.1.13",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.3",
    "@oclif/plugin-help": "^3.2.0",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "@tiagonapoli/oclif-plugin-spaced-commands": "^0.0.6",
    "enquirer": "^2.3.6",
    "execa": "^4.0.3",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "listr2": "^2.4.1",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "@oclif/dev-cli": "^1.22.2",
    "@types/config": "^0.0.36",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/object-path": "^0.11.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
