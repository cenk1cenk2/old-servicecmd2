{
  "name": "@servicecmd/common",
  "description": "Docker-Compose task manager and server monitor.",
  "version": "0.0.0",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "servicecmd-cli": "bin/run.js"
  },
  "repository": "https://github.com/cenk1cenk2/servicecmd",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn dev:start:onSuccess\"",
    "dev:start:onSuccess": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "prettier --write src/ && eslint --ext .json,.ts,.js --fix src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "@oclif/command": "^1.6.1",
    "@oclif/config": "^1.15.1",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^3.0.1",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "@tiagonapoli/oclif-plugin-spaced-commands": "^0.0.6",
    "cli-cursor": "^3.1.0",
    "config": "^3.3.1",
    "deepmerge": "^4.2.2",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "listr2": "^2.1.0-beta.1",
    "object-path": "^0.11.4",
    "object-path-immutable": "^4.1.0",
    "pad": "^3.2.0",
    "table": "^5.4.6",
    "tslib": "^2.0.0",
    "types": "^0.1.1",
    "winston": "^3.2.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "*",
    "@oclif/dev-cli": "^1.22.2",
    "@types/config": "^0.0.36",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.6",
    "@types/object-path": "^0.11.0",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.8",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}